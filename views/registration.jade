extends layout

block content
  .container
    - if (!success)
      form.col-lg-10.col-lg-offset-1.col-md-8.col-md-offset-2.col-sm-12.col-sm-offset-0.col-xs-10.col-xs-offset-1#registrationForm(method='post' class='inputForm')
        .messageRegBlock.col-md-12.col-md-offset-0.col-sm-12.col-sm-offset-0.col-xs-12.col-xs-offset-0.text-center
          h4#messageRegistr #{message}
        fieldset.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-12.col-xs-offset-0.regForm
          .col-xs-12.regTitle.text-center
            h4 Регистрация
          .col-xs-12.regBody
            .form-group
              input.form-control(placeholder='Логин' name='username' type='text')
            .form-group
              input.form-control(placeholder='Пароль' name='password' type='password')
            .form-group
              input.form-control(placeholder='Email' name='email' type='text')
            .form-group.text-center
              button.btn.btnReg(type='submit') Регистрация
          .col-xs-12.socialButtons
            a.loginTwitter(href='/login/twitter')
            a.loginVk(href='/login/vkontakte')
            a.loginFacebook(href='/login/facebook')
            a.loginGoogle(href='/login/google')
            a.loginInstagram(href='/login/instagram')
    - else
      div.messageRegSuccess.col-md-8.col-md-offset-1.text-center
        h4.col-md-6.col-md-offset-5 #{message}

  script(src='/js/jquery-2.1.4.min.js')
  script(src='/js/registrationF.js')
