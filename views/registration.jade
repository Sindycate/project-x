extends layout

block content
	div.row.col-md-12
		- if (!success)
			form.col-md-8.col-md-offset-1#registrationForm(method='post' class='inputForm')
				div.messageReg.col-md-4.col-md-offset-6.text-center
					h4#messageRegistr #{message}
				fieldset.col-md-4.col-md-offset-6(id='regForm')
					div.col-md-12#regTitle.text-center
						h4 Регистрация
					div.col-md-12#regBody
						.form-group
							input.form-control(placeholder='Логин' name='username' type='text')
						.form-group
							input.form-control(placeholder='Пароль' name='password' type='password')
						.form-group
							input.form-control(placeholder='Email' name='email' type='text')
						.form-group
							button.btn.btnReg(type='submit') Регистрация
						.form-group
							a(href='/login/twitter') Twitter
		- else
			div.messageRegSuccess.col-md-8.col-md-offset-1.text-center
				h4.col-md-6.col-md-offset-5 #{message}

	script(src='/js/jquery-2.1.4.min.js')
	script(src='/js/registrationF.js')
