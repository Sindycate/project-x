extends layout

block content
	block login
		div.row.col-md-12
			- if (!success)
				form.col-md-8.col-md-offset-1( method='post' action='/login')
					div.messageLogin.col-md-4.col-md-offset-6.text-center
						h4 #{message}
					fieldset.col-md-4.col-md-offset-6(id='authForm')
						div.col-md-12#authTitle.text-center
							h4 Авторизация
						div.col-md-12#authBody
							.form-group
								input.form-control(placeholder='Логин' name='login' type='text')
							.form-group
								input.form-control(placeholder='Пароль' name='password' type='password')
							.form-group
								button.btn(type='submit') Войти
			- else
				div.messageLogin.col-md-12
					h4 #{message}


