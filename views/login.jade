extends layout

block content
  block login
    .container
      form.col-lg-10.col-lg-offset-1.col-md-8.col-md-offset-2.col-sm-12.col-sm-offset-0.col-xs-10.col-xs-offset-1#loginForm(method='post')
        .messageLogin.col-md-12.col-md-offset-0.col-sm-12.col-sm-offset-0.col-xs-12.col-xs-offset-0.text-center
          h4.messageAuth #{message}
        fieldset.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-12.col-xs-offset-0.authForm
          .col-xs-12.authTitle.text-center
            h4 Авторизация
          .col-xs-12.authBody
            .form-group
              input.form-control(placeholder='Логин' name='username' type='text')
            .form-group
              input.form-control(placeholder='Пароль' name='password' type='password')
            .form-group.text-center
              button.btnAuth.btn(type='submit') Войти
          .col-xs-12.socialButtons
            a.loginTwitter(href='/login/twitter')
            a.loginVk(href='/login/twitter')
            a.loginFacebook(href='/login/twitter')
            a.loginGoogle(href='/login/twitter')
            a.loginInstagram(href='/login/twitter')

  script(src='/js/jquery-2.1.4.min.js')
  script(src='/js/loginF.js')
