extends layout

block content
	.step1
		.col-md-12
			h1 Step 1 | Settings
		.col-sm-12.col-md-12
			p.error(style='display: none;') Заполните все поля
			.col-sm-12.col-md-4
				.form-group
					label(for='countItems') Количество объектов для выбора
					input#countItems.form-control(name='countItems', type='number', min='2', max='10')
					label(for='countVotesForEnd') Ограничение на количество голосов
					input#countVotesForEnd.form-control(name='countVotesForEnd', type='number', min='10')
				.form-group
					input.form-control(name='stepOne', type='hidden', value='1')
					button.btn.btn-primary.btn-step1(type='submit') Next
	.step2(style='display: none;')
		h1 Step 2 | Create objects for vote
		hr
		p.error(style='display: none;') Заполните все поля
		form#step2Form(method='POST')
			.col-sm-12.col-md-12.group-items
				textarea.form-control(placeholder='Описание выборки', cols='40', rows='3', name='postName', type='text')
				.col-sm-3.col-md-3.text-center.item
					.thumbnail
						h4.itemHeading Item
						.caption
							p
								input.form-control.itemName(placeholder='Название', type='text')
							p
								textarea.form-control.itemDescribe(placeholder='Краткое описание', cols='40', rows='3', type='text')
		.col-md-12
			input.form-control(name='stepTwo', type='hidden', value='1')
			button.btn.btn-primary.btn-step2(type='submit') Next
	.step3(style='display: none;')
		h1 Step 3 | Share to your friends
		hr
		div#postStep3
	script(src='/js/jquery-2.1.4.min.js')
	script(src='/js/constructorF.js')

