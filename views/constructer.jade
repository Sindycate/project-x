extends layout

block content
  .col-md-12.col-sm-12.col-xs-12.constructorBeginning
    div#postForm.container
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1.col-sm-12.col-sm-offset-0.col-xs-12.col-xs-offset-0.postBlock
        h1.constructorTitle.text-center Конструктор
        //- .col-md-12.constructorPostHead
          //- .col-md-4.postImageBlock
          //-   form.uploadForm(enctype='multipart/form-data' action='/upload/image' method='post')
          //-     .mask-wrapper
          //-       ul.list-inline.mask
          //-         li.col-md-6
          //-           input.fileInputText(type="text" disabled value='Файл не выбран')
          //-         li.col-md-3
          //-           input.fileInput(type='file', name='postImg')
          //-           div#inputMask
          //-         li.col-md-3
          //-           input.download-image(type='submit' value='' name='submit')
          //-       //- span.status
          //-   .col-md-12.imgBlock
          //-     p.alignmentPostImg
          //-       img.postImg(src="../images/default-thumb.gif" alt="Mountain View" )
        .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1.constructorPostInfo
            input.form-control.postNameConstructor(placeholder='Название поста' maxlength='90' type='text' name='postName')
            textarea.postDescConstructor.form-control(placeholder='Описание поста' maxlength='190' cols='40' rows='2' name='postDesc' type='text')
        .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1.text-center.constructorPanel.col-md-12
          div.col-md-6.col-sm-5.col-xs-12
            button.addItem Добавить объект
            span.counter 2
          .display-type.text-right.col-md-6.col-sm-7.col-xs-12
            ul.list-inline
              li.fullStrItems#activeStr Полный режим
              li.shortStrItems Режим списка
        .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-12.col-xs-offset-0.messageConstructor.text-center(style="display: none;")
          .col-md-2.col-sm-2.col-xs-2
          .col-md-10.col-sm-10.col-xs-10.text-center
            h3.messageConstructorText
        .col-md-12.col-sm-12.col-xs-12.group-items
          .col-md-6.col-md-offset-0.co.col-md-6.col-md-offset-0.col-sm-6.col-sm-offset-0.col-xs-10.col-xs-offset-1.text-center.item
            .col-md-2.col-sm-2.col-xs-2.delItemShort.delItem(style='display: none;')
            .thumbnail.fullItem
              form.itemForm.uploadForm(enctype='multipart/form-data', action='/upload/image', method='post')
                .mask-wrapper
                  ul.list-inline.mask
                    li.col-md-8.col-sm-8.col-xs-8
                      input.fileInputText(type="text" disabled value='Файл не выбран')
                    li.col-md-2.col-sm-2.col-xs-2
                      input.fileInput(type='file', name='itemImg1')
                      div#inputMask
                    li.col-md-2.col-sm-2.col-xs-2
                      input.download-image(type='submit' value='' name='submit')
                input.itemsImagePath(type='hidden' name='itemsImage')
                .col-md-12.col-sm-12.col-xs-12.imgBlock
                  p.alignmentItemsImg
                    img.itemImg1(src="../images/noimage.png" alt="Mountain View")
                  .deleteImg(style='display: none;') Удалить
              .caption
                p
                  input.form-control.itemName(name='itemsName' placeholder='Название' type='text' maxlength='85')
                p.itemDescribe
                  textarea.form-control(name='itemsDescription' maxlength='200' placeholder='Краткое описание', cols='40', rows='3', type='text')
            .col-md-12.col-sm-12.col-xs-12.delItemFull.delItem
          .col-md-6.col-md-offset-0.col-sm-6.col-sm-offset-0.col-xs-10.col-xs-offset-1.text-center.item
            .col-md-2.col-sm-2.col-xs-2.delItemShort.delItem(style='display: none;')
            .thumbnail.fullItem
              form.itemForm.uploadForm(enctype='multipart/form-data', action='/upload/image', method='post')
                .mask-wrapper
                  ul.list-inline.mask
                    li.col-md-8.col-sm-8.col-xs-8
                      input.fileInputText(type="text" disabled value='Файл не выбран')
                    li.col-md-2.col-sm-2.col-xs-2
                      input.fileInput(type='file', name='itemImg2')
                      div#inputMask
                    li.col-md-2.col-sm-2.col-xs-2
                      input.download-image(type='submit' value='' name='submit')
                input.itemsImagePath(type='hidden' name='itemsImage')
                .col-md-12.col-sm-12.col-xs-12.imgBlock
                  p.alignmentItemsImg
                    img.itemImg2(src="../images/noimage.png" alt="Mountain View")
                  .deleteImg(style='display: none;') Удалить
              .caption
                p
                  input.form-control.itemName(name='itemsName' placeholder='Название' type='text' maxlength='85')
                p.itemDescribe
                  textarea.form-control(name='itemsDescription' maxlength='200' placeholder='Краткое описание', cols='40', rows='3', type='text')
            .col-md-12.col-sm-12.col-xs-12.delItemFull.delItem
    //- .col-md-10.col-md-offset-1.col-sm-12.col-sm-offset-0.text-center
    //-   .col-md-4.col-md-offset-2.col-sm-4.col-sm-offset-2.col-xs-6.col-xs-offset-0.goToSettingsBlock
    //-     .goToSettings Открыть настройки
    //-   .col-md-3.col-md-offset-2.col-sm-4.col-sm-offset-1.col-xs-12.col-xs-offset-0.savePostBlock
    //-     .savePost.btn-step2 Сохранить
    .container.text-center
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1.col-sm-12.col-xs-12.openSettings
        .col-md-12.col-sm-12.col-xs-12.titleSettings
          h3 Параметры
        .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-12.col-xs-offset-0.settingsMes
          h3.newSettingsMessage Установите параметры для вашего опроса
        .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-12.col-xs-offset-0.text-left.pollParams
          .col-md-12.col-md-offset-0.col-sm-12.col-xs-12
            h4 Выставить ограничения
            ul.list-inline
              li
                label По кол-ву голосов
              li
                input#countVotesForEnd.form-control(onkeypress='return event.charCode >= 48 && event.charCode <= 57' name='countVotesForEnd' type='number' min='10')
            ul.list-inline
              li
                label По кол-ву часов
              li
                input#hoursCheckbox(type="radio" name="limit" size='20')
              li
                input#timeForEndHours.form-control(disabled onkeypress='return event.charCode >= 48 && event.charCode <= 57' name='timeForEndHours' type='number' min='10')
            ul.list-inline
              li
                label До конкретного числа
              li
                input#dateCheckbox(type="radio" name="limit" size='20')
              li
                input#timeForEndDate.form-control(disabled name='timeForEndDate' type="date" min="2015-09-27" max="2016-01-01")
            ul.list-inline
              li
                label(for='onlyForReg') Закрытое голосование
              li
                input#onlyForReg(type='checkbox' size='20')
        //- .row.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.text-center.checkboxBlock
        .col-md-12.col-md-offset-0.col-sm-12.col-sm-offset-0.col-xs-12.col-xs-offset-0.savePostBlock.text-center
          .savePost.btn-step2 Сохранить
  .col-md-12.col-sm-12.col-xs-12.constructorComplete(style="display:none;")
    .container
      .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1.text-center.constructorInfo
        .col-md-12.col-sm-12.col-xs-12.shareToFriends
          h3 Сделать репост в социальные сети
          ul.socialNet.list-inline
            li#shareVk
            li#shareTwitter
            li#shareFB
          h5.postLink Ссылка на пост
            span
        .col-md-12.col-sm-12.col-xs-12.goToPost
          h3 Перейти к посту
  script(src='/js/jquery-2.1.4.min.js')
  script(src='/js/jquery.form.min.js')
  script(src='/js/jquery-ui.min.js')
  script(src='/js/constructorF.js')

